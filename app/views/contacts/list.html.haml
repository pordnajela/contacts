%table.table
  %thead
    %tr
      - @headers.each do |header|
        %th{:scope => "col"}
          = header.humanize
  %tbody
    - @user_contacts.each do |user_contact|
      %tr
        %td= user_contact.email
        %td= user_contact.name
        %td= user_contact.birth_date
        %td= user_contact.phone_number
        %td= user_contact.address
        %td= user_contact.franchise
        %td= "****#{user_contact.last_four_credt_card_numbers}"
        %td= user_contact.contact_file.name

.row
  = will_paginate @user_contacts, renderer: BootstrapPagination::Rails
